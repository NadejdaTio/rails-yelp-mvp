<h2><%= @restaurant.name %></h2>
<p>Adress: <%= @restaurant.address %></p>
<p>Category: <%= @restaurant.category %></p>
<p>Call us: <%= @restaurant.phone_number %></p>


<%= link_to "See all restaurants", restaurants_path, class: "btn btn-primary" %>
<%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "Delete", restaurant_path(@restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>

<h3>Reviews</h3>
<% @restaurant.reviews.each do |review| %>
    <p>Review: <%= review.content %></p>
    <p>Rating: <%= review.rating %></p>
<% end %>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
