<%= link_to "Add restaurant", new_restaurant_path, class: "btn btn-primary"%>
<br />
<% @restaurants.each do |restaurant| %>
  <h2><%= restaurant.name %></h2>
  <p><%= restaurant.address %></p>
  <%= link_to "View", restaurant_path(restaurant), class: "btn btn-primary"%>
  <%= link_to "Edit", edit_restaurant_path(restaurant), class: "btn btn-primary"%>
  <%= link_to "Delete", restaurant_path(restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
<% end %>
